#pragma once
#include <rsl/meta_traits>

#include <rsl/serializer/repr.hpp>

namespace rsl {

using rename = serializer::preferred_name<serializer::_impl::Annotated>;

consteval bool is_renamed(std::meta::info item) {
  return meta::has_annotation<serializer::preferred_name<serializer::_impl::Annotated>>(item);
}

struct GetterAnnotation {};
constexpr inline GetterAnnotation getter{};

consteval bool is_getter(std::meta::info R) {
  return is_function(R) && rsl::meta::has_annotation<GetterAnnotation>(R);
}

}  // namespace rsl
